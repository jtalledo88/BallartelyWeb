<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<!-- Will be referenced in Spring Context File -->
	<persistence-unit name="jpa-persistence" transaction-type="RESOURCE_LOCAL">
		<class>pe.com.foxsoft.ballartelyweb.jpa.data.Account</class>
		<class>pe.com.foxsoft.ballartelyweb.jpa.data.Client</class>
		<class>pe.com.foxsoft.ballartelyweb.jpa.data.GeneralParameter</class>
		<class>pe.com.foxsoft.ballartelyweb.jpa.data.Movement</class>
		<class>pe.com.foxsoft.ballartelyweb.jpa.data.ProductLabel</class>
		<class>pe.com.foxsoft.ballartelyweb.jpa.data.ProductStock</class>
		<class>pe.com.foxsoft.ballartelyweb.jpa.data.Provider</class>
		<class>pe.com.foxsoft.ballartelyweb.jpa.data.ShippingDetail</class>
		<class>pe.com.foxsoft.ballartelyweb.jpa.data.ShippingDetailLabel</class>
		<class>pe.com.foxsoft.ballartelyweb.jpa.data.ShippingHead</class>
		<class>pe.com.foxsoft.ballartelyweb.jpa.data.User</class>
		
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/db_ballartelyweb" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.password" value="mysql" />
		</properties>
	</persistence-unit>
</persistence>